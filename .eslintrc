/** @format */

{
	"root": true,
	"parser": "babel-eslint",
	"extends": [ "wpcalypso/react", "plugin:jsx-a11y/recommended", "prettier", "plugin:@woocommerce/eslint-plugin/recommended" ],
	"plugins": [ "jsx-a11y", "jest", "jsdoc-alignment" ],
	"env": {
		"browser": true,
		"jest/globals": true,
		"node": true
	},
	"globals": {
		"wp": true,
		"wpApiSettings": true,
		"wcSettings": true,
		"wcpaySettings": true,
		"wcpayAdminSettings": true,
		"page": true,
		"browser": true,
		"context": true,
		"jestPuppeteer": true
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"rules": {
		"camelcase": [ "error", { "properties": "always" } ],
		"indent": "off",
		"max-len": [ "error", { "code": 140 } ],
		"no-console": "warn",
		"react/no-danger": "off",
		"react/react-in-jsx-scope": "off",
		"wpcalypso/import-no-redux-combine-reducers": "off",
		"wpcalypso/jsx-classname-namespace": "off",
		"wpcalypso/redux-no-bound-selectors": "warn",
		"react/jsx-curly-spacing": [
			2,
			{ "when": "always", "children": { "when": "always" } }
		],
		"jsx-a11y/label-has-for": [
			"error",
			{
				"required": "id"
			}
		]
	}
}
